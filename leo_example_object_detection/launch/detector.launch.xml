<launch version="0.1.1">

    <arg name="labels" default="$(find-pkg-share leo_example_object_detection)/config/coco_labels.txt" description="Name of the file with labels for model."/>

    <arg name="camera_topic" default="camera/image_raw" description="Name of topic with Image messages."/>
    <arg name="model" default="$(find-pkg-share leo_example_object_detection)/models/ssd_mobilenet_v1_1_metadata_1.tflite" description="Path to neural network model."/>
    <arg name="config_file" default="$(find-pkg-share leo_example_object_detection)/config/object_detector.yaml"/>

    <node pkg="leo_example_object_detection" exec="object_detector" output="screen" args="-p $(var model) -c $(var camera_topic) -l $(var labels)">
        <param from="$(var config_file)"/>
    </node>
</launch>